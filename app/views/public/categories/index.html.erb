<!--ページタイトルの指定-->
<% content_for :title do %>
  カテゴリー一覧 | kokoro room
<% end %>

<div class="container">

  <div class="row my-5">
    <div class="col-6">
      <h2 class="mark text-center rounded">カテゴリー一覧</h2>
    </div>
  </div>

  <table class="table table-hover w-50 pb-5">
    <thead>
      <tr>
        <th>カテゴリー名</th>
        <th>投稿された悩み事の数</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td>
            <!--クリックしたカテゴリーに関する悩み事一覧画面へ遷移-->
            <%= link_to category.name, category_path(category) %>
          </td>
          <td>
            <%= category.problems.count %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
