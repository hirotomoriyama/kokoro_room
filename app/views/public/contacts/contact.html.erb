<h2>問い合わせフォーム</h2>

<%= form_with model: @contact, url: contacts_path, local:true do |f| %>
  <%= f.label :name, "お名前" %><br />
  <%= f.text_field :name, autofocus: true, placeholder:"ココロ タロウ" %>

  <%= f.label :body, "問い合わせ内容" %><br />
  <%= f.text_area :body, autofocus: true, placeholder:"問い合わせ内容を入力してください" %>

  <%= f.submit "送信" %>
<% end %>