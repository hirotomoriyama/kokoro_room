<!--ページタイトルの指定-->
<% content_for :title do %>
  お問い合わせフォーム | kokoro room
<% end %>

<div class="container pb-5">

  <!--エラーメッセージの表示-->
  <%= render 'layouts/alert' %>

  <div class="row my-5">
    <div class="col-6">
      <h2 class="mark text-center rounded">お問い合わせフォーム</h2>
    </div>
  </div>

  <div class="row pl-4">
    <div class="col">
      <p class="text-info">
        <i class="fas fa-exclamation-circle"></i>ご質問等ございましたら、ご連絡ください。お問い合わせ内容は管理者にのみ送信されます。
      </p>
    </div>
  </div>

  <%= form_with model: @contact, url: contacts_path, local:true do |f| %>

  <div class="row pl-5 pb-3">
    <div class="col-4">
      <%= f.label :name, "お名前" %>
      <span class="badge badge-danger">必須</span>
    </div>
    <%= f.text_field :name, autofocus: true, class:"col-3 form-control form-control-bg", placeholder:"ココロ タロウ" %>
  </div>

  <div class="row pl-5 pb-3">
    <div class="col-4">
      <%= f.label :email, "メールアドレス" %>
      <span class="badge badge-danger">必須</span>
    </div>
    <%= f.email_field :email, autocomplete: "email", class:"col-3 form-control form-control-bg", placeholder:"kokoro@taro.com" %>
  </div>

  <div class="row pl-5 pb-3">
    <div class="col-4">
      <%= f.label :body, "お問い合わせ内容" %>
      <span class="badge badge-danger">必須</span>
    </div>
    <%= f.text_area :body, class:"col-5 form-control form-control-bg", rows:"10", placeholder:"お問い合わせ内容を入力してください" %>
  </div>

  <div class="row mr-4 pl-5 pb-5">
    <div class="offset-4 col-3">
      <%= button_tag :type => "submit", :class => "form-control form-control-sm btn btn-success" do %>
        <i class="far fa-envelope"></i> 送信
      <% end %>
    </div>
  </div>
  <% end %>

</div>