<div class="container">

  <!--エラーメッセージの表示-->
  <%= render 'layouts/alert' %>

  <div class="row my-5">
    <div class="col-6">
      <h2 class="mark text-center rounded">返事の投稿</h2>
    </div>
  </div>

  <%= form_with model: @response, url: problem_advice_responses_path(@advice.id), local:true do |f| %>

  <div class="row pl-5 pb-3">
    <%= f.label :body, "返事の内容", class:"col-3" %><br />
    <%= f.text_area :body, class:"col-3", size:"5x5", placeholder:"返事の内容を入力してください" %>
  </div>

  <div class="row pl-5" id="star">
    <%= f.label :rate, "評価", class:"col-3" %>
    <%= f.hidden_field :rate, :value => 'score' %>
  </div>

  <script>
    $('#star').raty({
      starOn: "<%= asset_path('star-on.png') %>",
      starOff: "<%= asset_path('star-off.png') %>",
      starHalf: "<%= asset_path('star-half.png') %>",
      scoreName: 'response[rate]',
      half: true
    });
  </script>

  <div class="row mr-5 pl-5 py-3">
    <div class="offset-3 col-2">
      <%= button_tag :type => "submit", :class => "form-control form-control-sm btn btn-success" do %>
        <i class="fas fa-plus-circle"></i> 投稿
      <% end %>
    </div>
  </div>

<% end %>

</div>