<!--ページタイトルの指定-->
<% content_for :title do %>
  悩み事の投稿 | kokoro room
<% end %>

<div class="container">

  <!--エラーメッセージの表示-->
  <%= render 'layouts/alert' %>

  <div class="row my-5">
    <div class="col-6">
      <h2 class="mark text-center rounded">悩み事の投稿</h2>
    </div>
  </div>

  <%= form_with model: @problem, url: problems_path, local:true do |f| %>

  <div class="row pl-5 pb-3">
    <%= f.label :title, "タイトル", class:"col-3" %><br />
    <%= f.text_field :title, class:"col-3", placeholder:"タイトルを入力してください" %>
  </div>

  <div class="row pl-5 pb-3">
    <%= f.label :body, "悩み事の内容", class:"col-3" %><br />
    <%= f.text_area :body, class:"col-3", size:"5x5", placeholder:"悩み事の内容を入力してください" %>
  </div>

  <div class="row pl-5 pb-3">
    <!--カテゴリーをプルダウンメニューから選択-->
    <%= f.label :category, "カテゴリー", class:"col-3" %><br />
    <%= f.collection_select :category_id, Category.all, :id, :name, class:"col-3" %>
  </div>

  <div class="row mr-5 pl-5 pb-3">
    <div class="offset-3 col-3">
      <%= button_tag :type => "submit", :class => "form-control form-control-sm btn btn-success" do %>
        <i class="fas fa-plus-circle"></i> 投稿
      <% end %>
    </div>
  </div>

  <% end %>

</div>