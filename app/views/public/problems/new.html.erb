<h2>悩み事の投稿</h2>

<%= form_with model: @problem, url: problems_path, method: :post, local: true do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>悩みの内容</h4>
  <%= f.text_area :body %>

  <!--カテゴリーをプルダウンメニューから選択-->
  <h4>カテゴリー</h4>
  <%= f.collection_select :category_id, @categories, :id, :name %>

  <%= f.submit '投稿' %>
<% end %>