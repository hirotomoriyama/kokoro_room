<div class="container">

  <div class="row my-5">
    <div class="col-6">
      <h2 class="mark text-center rounded">悩み事一覧</h2>
    </div>
  </div>

  <div class="row d-flex flex-wrap pb-5">
    <% @problems.each do |problem| %>

    <div class="col-4 bg-light border border-secondary m-5 p-5 rounded">
      <h4><%= problem.member.name %>さんの投稿</h4>

      <h4 class="mt-3">タイトル</h4>
      <!--タイトルをクリックすると悩み事詳細画面へ遷移-->
      <%= link_to problem.title, problem_path(problem.id) %>

      <h4 class="mt-3">悩みの内容</h4>
      <%= problem.body %>

      <h4 class="mt-3">カテゴリー</h4>
      <%= problem.category.name %>
    </div>

    <% end %>
  </div>

<%= render 'layouts/back' %>

</div>