<!--ページタイトルの指定-->
<% content_for :title do %>
  カテゴリー編集 | kokoro room
<% end %>

<div class="container pb-5">

  <!--エラーメッセージの表示-->
  <%= render 'layouts/alert' %>

  <div class="row my-5">
    <div class="col-6">
      <h2 class="mark text-center rounded">カテゴリー編集</h2>
    </div>
  </div>

  <!--カテゴリー編集フォーム-->
  <%= form_with model: @category, url: admin_category_path(@category.id), local:true do |f| %>

  <div class="row pl-5 pb-3">
    <div class="col-4">
      <%= f.label :name, "カテゴリー名" %>
      <span class="badge badge-danger">必須</span>
    </div>
    <%= f.text_field :name, class:"col-3 form-control form-control-bg", placeholder:"ここに入力" %>
  </div>

  <div class="row mr-4 pl-5 pb-3">
    <div class="offset-4 col-3">
      <%= button_tag :type => "submit", :class => "form-control form-control-sm btn btn-success" do %>
        <i class="fas fa-save"></i> 変更を保存
      <% end %>
    </div>
  </div>

  <% end %>

</div>