<div class="container pb-5">

  <div class="row my-5">
    <div class="col-6">
      <h2 class="mark text-center rounded">カテゴリー編集</h2>
    </div>
  </div>

  <!--カテゴリー編集フォーム-->
  <div class="row pl-5">
  <%= form_with model: @category, url: admin_category_path(@category.id), local:true do |f| %>
    <%= f.label :name, "カテゴリー名", class:"col-4" %>
    <%= f.text_field :name, class:"col-7" %>
    <%= button_tag :type => "submit", :class => "offset-4 col-3 form-control form-control-sm btn btn-success" do %>
      <i class="fas fa-edit"></i> 編集
    <% end %>
  <% end %>
  </div>

</div>