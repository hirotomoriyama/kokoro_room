<h2><%= @member.name %>さんの会員情報編集</h2>
<h4>会員ID</h4>
<%= @member.id %>
<h4>メールアドレス</h4>
<%= @member.email %>
<h4>会員ステータス</h4>
<!--ラジオボタンで有効か退会か選択-->
<%= form_with model: @member, url: admin_member_path(@member.id), method: :patch, local:true do |f| %>
  <%= f.radio_button :is_deleted, :false %>有効
  <%= f.radio_button :is_deleted, :true %>退会
  <%= f.submit '変更を保存' %>
<% end %>